<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/miningcity-256.png" type="image/png">
    <%- include('styles'); -%>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
            rel="stylesheet">
        <title>Electric Cash</title>
        <script src="/js/main.js"></script>
</head>

<body>
    <header>
        <%- include('navbar'); -%>
    </header>
    <main>
        <div id="content-holder">
            <h1 class="headtext">Danh mục: Electric Cash</h1>
            <ul class="post-list">
                <% if(posts.length>0) { %>
                    <% posts.forEach(function(post) { %>
                        <a class="post-card" href="/sangiaodich/<%= post._id %>"><li
                            style="margin: 5px 0; border-radius: 10px; border: #f7f7f7 2px solid; background-color: #fbfbfb; padding: 5px;">
                            <div style="height: auto; width: 100%; display: flex; align-content: center;">
                                <img style="width: 100%; border-radius: 8px;" src="http://104.199.237.41<%= post.thumbnail %>">
                            </div>
                            <div style="width: 100%; padding: 10px 10px 20px 10px;">
                                <h4>
                                    <%= post.title %>
                                </h4>
                            </div>
                        </li></a>
                        <% }); %>
                            <% } else { %>
                                <div class="container"
                                    style="width: 100%;height: 30vh;margin-top: 20vh;display: block;text-align: center;align-items: center;justify-content: center;">
                                    <h1>Không có bài viết nào</h1>
                                </div>
                                <% }; %>
            </ul>
        </div>
        <%- include('contactus'); -%>
    </main>
    <%- include('footer'); -%>
</body>

</html>